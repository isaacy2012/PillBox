<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="@drawable/rounded_corners"
        android:id="@+id/widgetRelativeLayout"
        android:descendantFocusability="blocksDescendants">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widgetNameTV"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="18sp"
            android:layout_marginVertical="0dp"
            android:text="Name"
            android:layout_marginEnd="5dp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="14sp"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/widgetStockTV"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:maxLines="1" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widgetStockTV"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widgetLastTakenTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:autoSizeMinTextSize="11sp"
            android:autoSizeMaxTextSize="14sp"
            android:textColor="@android:color/tab_indicator_text"
            app:layout_constraintTop_toBottomOf="@+id/widgetNameTV"
            android:layout_alignTop="@+id/widgetNameTV"
            android:layout_marginTop="50dp" />

</RelativeLayout>

